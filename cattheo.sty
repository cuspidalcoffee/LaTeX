\def\equalizer[#1]{%
	\arrow[#1, shift left=.75ex]
	\arrow[#1, shift right=.75ex]
}

\def\lequalizer[#1;#2,#3]{%
	% (l)abelled equalizer
	\arrow[#1, shift left=.75ex, "#2"]
	\arrow[#1, shift right=.75ex, "#3"']
}
